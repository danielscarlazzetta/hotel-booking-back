generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          String  @id @default(uuid())
  nombres     String
  apellidos   String
  rut         String  @unique
  fecha_nac   DateTime
  num_tel     String
  direccion   String
  region      String
  comuna      String
  numero      Int
  tipo_usuario TipoUsuario
  propiedades Propiedad[]
}

enum TipoUsuario {
  ADMIN
  USUARIO
  EMPRESA
}

model Propiedad {
  id              String           @id @default(uuid())
  nombre          String
  direccion       String
  region         String
  comuna         String
  numero         Int
  due単o          Usuario @relation(fields: [due単oId], references: [id])
  due単oId        String
  detallesTec    DetallesTecnicos @relation(fields: [detallesTecId], references: [id])
  detallesTecId  String @unique
  imagenes       Imagen[]
}

model DetallesTecnicos {
  id           String @id @default(uuid())
  numero_piezas Int
  numero_ba単os Int
  sector_lavado Boolean
  amoblada    Boolean
  parrilla    Boolean
  gym         Boolean
  propiedad   Propiedad?
}

model Imagen {
  id              String @id @default(uuid())
  descripcion     String
  ubicacion_local String
  propiedad      Propiedad? @relation(fields: [propiedadId], references: [id])
  propiedadId    String?
}

model Plan {
  id             String  @id @default(uuid())
  nombre         String
  num_propiedades Int
  num_imagenes   Int
  precio         Float
}

